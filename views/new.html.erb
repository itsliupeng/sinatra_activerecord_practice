<h1>New post</h1>

<form action='/posts' method="post">
  <div class="field">
    <label>Title:</label><br/>
    <input type="text" name="post[title]">
  </div>
  <div class="field">
    <label>Content:</label></br>
    <input type="text" name="post[content]">
  </div>
  <div class="actions">
    <input type="submit" value="submit">
  </div>
</form>
